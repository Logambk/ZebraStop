{
  "manifest_version": 2,

  "name": "Zebra Stop",
  "description": "Позволяет вам блокировать комментарии Вани-сами-знаете-кого на лентачах",
  "version": "1.0",
  "browser_action": {
    "default_icon": "zebra-crossed-128.png",
	"default_title": "Enable Zebra"
  },
  
  "permissions": ["tabs"],

  "icons": {
    "128": "zebra-crossed-128.png"
  },
  
  "background": {
    "scripts": ["background.js"] 
  }, 

  "content_scripts": [
    {
      "matches": ["*://vk.com/true_lentach*", "*://vk.com/oldlentach*", "*://vk.com/feed*"],
      "js": ["zeb_inject.js"]
    }
  ]
}